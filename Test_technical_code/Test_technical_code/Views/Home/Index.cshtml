@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <hr />
    <div class="col-lg-12">
        <form id="frmTest">
            <input type="text" id="txtInput" class="form-control" onkeypress="return AllowOnlyNumber(event);"/>
            <hr />
            <button class="btn btn-primary" id="btnGenerateSegitiga">Generate Segitiga</button>
            <button class="btn btn-success" id="btnGenerateBilanganGanjil">Generate Bilangan Ganjil</button>
            <button class="btn btn-default" id="btnGenerateBilanganPrima">Generate Bilangan Prima</button>
        </form>
    </div>
</div>
@section scripts{
    <script>


        //validate front end here
        function AllowOnlyNumber(evt) {
                    evt = (evt) ? evt : window.event;
                    var charCode = (evt.which) ? evt.which : evt.keyCode;
                    if(charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }

        function GenerateSegitiga(paramValue){
            $.ajax({
                type: 'POST',
                url: '/Home/GenerateSegitiga',
                data: JSON.stringify({paramValue: paramValue}),
                contentType: 'application/json',
                dataType: 'json'
            }).done(function (data) {
                console.log(data);
            }).fail(function (error) {

            });
        }

        function GenerateBilanganGanjil(paramValue) {
            $.ajax({
                type: 'POST',
                url: '/Home/GenerateSegitiga',
                data: JSON.stringify({ paramValue: paramValue }),
                contentType: 'application/json',
                dataType: 'json'
            }).done(function (data) {
                console.log(data);
            }).fail(function (error) {

            });
        }

        function GenerateBilanganPrima(paramValue) {
            $.ajax({
                type: 'POST',
                url: '/Home/GenerateSegitiga',
                data: JSON.stringify({ paramValue: paramValue }),
                contentType: 'application/json',
                dataType: 'json'
            }).done(function (data) {
                console.log(data);
            }).fail(function (error) {

            });
        }

        $(document).ready(function () {
            $('#btnGenerateSegitiga').click(function (e) {
                e.preventDefault();
                var inputText = $('#txtInput').val();

                GenerateSegitiga(inputText);

            });
            $('#btnGenerateBilanganGanjil').click(function (e) {
                var inputText = $('#txtInput').val();
                alert("Ganjil");
            });
            $('#btnGenerateBilanganPrima').click(function (e) {
                var inputText = $('#txtInput').val();
                alert("Prima");
            });
        });
    </script>
}